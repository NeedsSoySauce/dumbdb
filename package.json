{
  "name": "node_template",
  "version": "1.0.0",
  "description": "Node.js project template",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon",
    "start": "node build/index.js",
    "build": "rimraf ./build && tsc",
    "lint": "eslint \"src/**\" --quiet --fix",
    "lint-ci": "eslint \"src/**\" --quiet",
    "test": "echo Specify a test script in package.json to run tests",
    "prepare": "husky install",
    "prettier": "prettier -w src"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@octokit/types": "^6.22.0",
    "dotenv": "^10.0.0",
    "octokit": "^1.1.0",
    "pino": "^6.13.0"
  },
  "devDependencies": {
    "@types/pino": "^6.3.11",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "pino-pretty": "^5.1.2",
    "prettier": "2.3.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js",
    "ignore": [],
    "exec": "npm run lint && ts-node ./src/index.ts"
  }
}